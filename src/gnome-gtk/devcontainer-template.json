{
    "id": "gnome-gtk",
    "version": "0.0.5",
    "name": "GNOME app template",
    "publisher": "ThonkDifferent",
    "description": "Develop GTK 4 + Libawdaita applications on Linux. Requires Wayland on host",
    "documentationURL": "https://github.com/thonkdifferent/gtk-libadwaita-devtemplate/tree/main/src/gnome-gtk",
    "licenseURL": "https://github.com/thonkdifferent/gtk-libadwaita-devtemplate/blob/main/LICENSE",
    "options": {
        "sdkVersion": {
            "type": "string",
            "description": "GNOME SDK version. This matches with the flatpak runtime",
            "proposals": [
                "master",
                "49"
            ],
            "default": "49"
        },
        "hostUserId":{
            "type": "string",
            "description": "Host UID. Needed for mounting the wayland socket",
            "required": true
        }
    },
    "keywords":[
        "GTK",
        "GNOME",
        "Libadwaita",
        "Flatpak"
    ],
    "platforms": [
        "GNOME",
        "GTK",
        "Libadwaita",
        "C",
        "Python",
        "Flatpak"
    ]
}
