{
    "name": "GTK/Libadwaita App",
    "dockerComposeFile": "compose.yaml",
    "service": "app",
    "mounts": [
        "source=${localEnv:XDG_RUNTIME_DIR}/wayland-0,target=/run/user/1001/wayland-0,type=bind,consistency=delegated"
    ],
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "remoteUser": "vscode",
    "postStartCommand": "echo 'if ! pgrep -x dbus-daemon > /dev/null; then eval $(dbus-launch --sh-syntax); else echo \"D-Bus running\"; fi' >> /home/vscode/.bashrc; xdg-user-dirs-update --force",
    "customizations": {
        "vscode": {
            "extensions": [
                "bodil.blueprint-gtk",
                "mesonbuild.mesonbuild",
                "ms-vscode.cpptools-extension-pack",
                "bilelmoussaoui.flatpak-vscode"
            ]
        }
    },
    "containerEnv": {
        "XDG_MENU_PREFIX":"gnome-",
        "XDG_SESSION_DESKTOP":"gnome",
        "XDG_SESSION_TYPE":"wayland",
        "XDG_CURRENT_DESKTOP":"GNOME",
        "XDG_SESSION_CLASS":"user",
        "XDG_RUNTIME_DIR":"/run/user/1001",
        "WAYLAND_DISPLAY":"wayland-0",
        "DESTDIR":"${containerWorkspaceFolder}/builddir/app",
        "XDG_DATA_DIRS":"${containerWorkspaceFolder}/app/share:${containerEnv:XDG_DATA_DIRS}",
        "DISPLAY":":0"
    }
}